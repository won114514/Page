---
// 搜索组件
---

<div class="search-container">
  <div class="search-input-wrapper">
    <svg class="search-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="11" cy="11" r="8"></circle>
      <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
    </svg>
    <input
      type="text"
      id="search-input"
      placeholder="搜索文章... (按 / 键聚焦，回车打开弹窗)"
      class="search-input"
    />
  </div>
  
  <!-- 居中弹窗 -->
  <div id="search-modal" class="search-modal">
    <div class="search-modal-overlay"></div>
    <div class="search-modal-content">
      <div class="search-modal-header">
        <h2>搜索结果</h2>
        <button id="search-modal-close" class="search-modal-close">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>
      <div class="search-modal-body">
        <div id="search-modal-results" class="search-modal-results"></div>
      </div>
    </div>
  </div>
</div>

<script>
  // 使用动态导入，避免在开发环境中出现资源加载问题
  let Fuse: any;
  async function initFuse() {
    if (!Fuse) {
      Fuse = (await import('fuse.js')).default;
    }
    return Fuse;
  }
  
  // 定义搜索索引项类型
  interface SearchIndexItem {
    slug: string;
    title: string;
    date: string;
    excerpt: string;
    content: string;
  }
  
  // 定义 Fuse 结果类型
  interface FuseResult {
    item: SearchIndexItem;
    matches?: Array<{
      key?: string;
      indices?: [number, number][];
      value?: string;
      score?: number;
    }>;
    score?: number;
  }
  
  // 搜索索引数据
  let searchIndex: SearchIndexItem[] = [];
  let fuse: any | null = null;
  
  // 加载搜索索引
  async function loadSearchIndex(): Promise<void> {
    try {
      const response = await fetch('/search-index.json');
      searchIndex = await response.json();
      
      // 使用动态导入初始化 Fuse.js 实例
      const FuseClass = await initFuse();
      fuse = new FuseClass(searchIndex, {
        keys: ['title', 'content', 'excerpt'],
        threshold: 0.2, // 提高匹配精度
        includeScore: true,
        includeMatches: true,
        ignoreLocation: true
      });
    } catch (error) {
      console.error('Failed to load search index:', error);
    }
  }
  
  // 高亮匹配文本
  function highlightText(text: string, matches: any[]): string {
    if (!matches || !matches.length) return text;
    
    let result = text;
    let offset = 0;
    
    // 按匹配位置排序，避免重叠问题
    const allIndices: [number, number][] = [];
    matches.forEach(match => {
      if (match.indices) {
        match.indices.forEach(([start, end]: [number, number]) => {
          allIndices.push([start, end]);
        });
      }
    });
    
    // 按起始位置排序
    allIndices.sort((a, b) => a[0] - b[0]);
    
    // 去重重叠的匹配
    const uniqueIndices: [number, number][] = [];
    let lastEnd = -1;
    for (const [start, end] of allIndices) {
      if (start > lastEnd) {
        uniqueIndices.push([start, end]);
        lastEnd = end;
      }
    }
    
    // 应用高亮
    for (const [start, end] of uniqueIndices) {
      const highlighted = `<mark>${result.substring(start + offset, end + offset + 1)}</mark>`;
      result = result.substring(0, start + offset) + highlighted + result.substring(end + offset + 1);
      offset += highlighted.length - (end - start + 1);
    }
    
    return result;
  }
  
  // 初始化搜索组件
  function initSearch(): void {
    const searchInput = document.getElementById('search-input') as HTMLInputElement | null;
    const searchModal = document.getElementById('search-modal');
    const searchModalClose = document.getElementById('search-modal-close');
    const searchModalOverlay = document.querySelector('.search-modal-overlay');
    const searchModalResults = document.getElementById('search-modal-results');
    
    if (!searchInput || !searchModal || !searchModalClose || !searchModalOverlay || !searchModalResults) return;
    
    // 加载搜索索引
    loadSearchIndex();
    
    // 按 / 键聚焦搜索框
    document.addEventListener('keydown', (e) => {
      if (e.key === '/' && e.target instanceof Element && e.target.tagName !== 'INPUT' && e.target.tagName !== 'TEXTAREA') {
        e.preventDefault();
        searchInput.focus();
      }
    });
    
    // 按 ESC 键清空搜索并关闭结果
    searchInput.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        searchInput.value = '';
        searchModal.classList.remove('show');
        searchInput.blur();
      }
    });
    
    // 回车键处理 - 显示居中弹窗
    searchInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && searchInput.value.trim() && fuse) {
        e.preventDefault();
        
        // 执行搜索
        const results = fuse.search(searchInput.value, { limit: 20 });
        
        // 渲染搜索结果到弹窗
        if (results.length === 0) {
          searchModalResults.innerHTML = `
            <div class="search-result-item no-results">
              <svg class="search-icon-empty" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                <line x1="8.5" y1="8.5" x2="15.5" y2="15.5"></line>
                <line x1="15.5" y1="8.5" x2="8.5" y2="15.5"></line>
              </svg>
              <h3>未找到匹配文章</h3>
              <p>尝试使用其他关键词或检查拼写</p>
            </div>
          `;
        } else {
          const html = results.map((result: FuseResult) => {
            const item = result.item;
            let title = item.title;
            let excerpt = item.excerpt;
            
            // 高亮匹配文本
            if (result.matches) {
              result.matches.forEach((match: any) => {
                if (match.key === 'title') {
                  title = highlightText(title, [match]);
                } else if (match.key === 'excerpt') {
                  excerpt = highlightText(excerpt, [match]);
                }
              });
            }
            
            return `
              <div class="search-result-item">
                <div class="search-result-content">
                  <a href="/posts/${item.slug}" class="search-result-title-link">
                    <h3 class="search-result-title">${title}</h3>
                  </a>
                  <p class="search-result-excerpt">${excerpt}</p>
                  <div class="search-result-meta">
                    <time class="search-result-date">${item.date}</time>
                    <span class="search-result-slug">${item.slug}</span>
                  </div>
                </div>
              </div>
            `;
          }).join('');
          
          searchModalResults.innerHTML = html;
        }
        
        // 显示弹窗
        searchModal.classList.add('show');
      }
    });
    
    // 关闭弹窗
    function closeModal() {
      if (searchModal) {
        searchModal.classList.remove('show');
      }
    }
    
    // 关闭按钮事件
    searchModalClose.addEventListener('click', closeModal);
    
    // 遮罩层点击事件
    searchModalOverlay.addEventListener('click', closeModal);
    
    // 弹窗内按 ESC 键关闭
    searchModal.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeModal();
      }
    });
  }
  
  // 页面加载完成后初始化
  if (typeof window !== 'undefined') {
    window.addEventListener('DOMContentLoaded', initSearch);
  }
</script>

<style>
  .search-container {
    position: relative;
    width: 200px;
    display: flex;
    align-items: center;
    z-index: 1000;
  }
  
  .search-input-wrapper {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
  }
  
  .search-icon {
    position: absolute;
    left: 0.75rem;
    width: 16px;
    height: 16px;
    color: var(--text-color);
    opacity: 0.5;
    transition: all 0.3s ease;
    pointer-events: none;
    z-index: 2;
  }
  
  .search-input {
    width: 100%;
    padding: 0.5rem 1rem 0.5rem 2.5rem;
    border: 1px solid var(--border-color);
    border-radius: 24px;
    font-size: 0.9rem;
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-family: var(--font-sans);
    box-sizing: border-box;
    z-index: 1;
  }
  
  .search-input::placeholder {
    color: var(--text-color);
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }
  
  .search-input:focus {
    outline: none;
    border-color: var(--accent-color);
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
    width: 300px;
    background-color: var(--bg-color);
  }
  
  [data-theme="dark"] .search-input:focus {
    box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
  }
  
  .search-input:focus + .search-icon,
  .search-input:hover + .search-icon {
    opacity: 0.7;
  }
  
  /* 搜索结果项 */
  .search-result-item {
    display: flex;
    align-items: center;
    padding: 1rem 1.25rem;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    color: inherit;
    position: relative;
  }
  
  .search-result-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(0, 0, 0, 0.02), transparent);
    transform: translateX(-100%);
    transition: transform 0.5s ease;
    pointer-events: none;
  }
  
  .search-result-item:hover {
    background-color: rgba(0, 0, 0, 0.03);
    transform: translateX(4px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  [data-theme="dark"] .search-result-item:hover {
    background-color: rgba(255, 255, 255, 0.03);
  }
  
  .search-result-item:hover::before {
    transform: translateX(100%);
  }
  
  /* 搜索结果内容 */
  .search-result-content {
    flex: 1;
    min-width: 0;
  }
  
  /* 标题链接 */
  .search-result-title-link {
    color: var(--text-color);
    display: inline-block;
    width: 100%;
    text-decoration: none;
    position: relative;
    line-height: 1.4;
    transition: color 0.3s ease;
  }
  
  .search-result-title-link:hover {
    color: var(--accent-color);
  }
  
  .search-result-title {
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1.4;
    color: inherit;
    transition: all 0.2s ease;
    font-family: var(--font-sans);
    display: inline-block;
    /* 直接定义下划线样式，不依赖 CSS 变量 */
    background-image: linear-gradient(to right, var(--accent-color), var(--accent-color));
    background-size: 0% 1px;
    background-position: 0% 100%;
    background-repeat: no-repeat;
    background-position-y: 100%;
    transition: background-size 0.3s ease-in-out, color 0.3s ease;
  }
  
  /* 为 h3 元素直接添加 hover 效果，确保在任何情况下都能显示下划线 */
  .search-result-title:hover {
    transform: translateX(2px);
    color: var(--accent-color);
    /* 悬停时展开下划线，从左到右 */
    background-size: 100% 1px;
  }
  
  /* 同时保留父元素 hover 效果，确保兼容性 */
  .search-result-title-link:hover .search-result-title {
    transform: translateX(2px);
    color: var(--accent-color);
    /* 悬停时展开下划线，从左到右 */
    background-size: 100% 1px;
  }
  
  .search-result-excerpt {
    font-size: 0.875rem;
    color: var(--text-color);
    opacity: 0.8;
    margin-bottom: 0.75rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-family: var(--font-sans);
  }
  
  /* 搜索结果元数据 */
  .search-result-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.75rem;
    color: var(--text-color);
    opacity: 0.6;
    font-family: var(--font-sans);
    margin-top: auto;
  }
  
  .search-result-date {
    white-space: nowrap;
  }
  
  .search-result-slug {
    background-color: rgba(0, 0, 0, 0.05);
    padding: 0.125rem 0.5rem;
    border-radius: 12px;
    font-size: 0.7rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  [data-theme="dark"] .search-result-slug {
    background-color: rgba(255, 255, 255, 0.08);
  }
  
  /* 无结果状态 */
  .search-result-item.no-results {
    text-align: center;
    color: var(--text-color);
    opacity: 0.6;
    cursor: default;
    padding: 3rem 1.5rem;
    font-family: var(--font-sans);
    flex-direction: column;
    gap: 1rem;
  }
  
  .search-result-item.no-results h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
    opacity: 0.8;
  }
  
  .search-result-item.no-results p {
    margin: 0;
    font-size: 0.9rem;
    opacity: 0.6;
  }
  
  .search-icon-empty {
    opacity: 0.3;
    margin-bottom: 0.5rem;
  }
  
  .search-result-item.no-results:hover {
    background-color: transparent;
    transform: none;
    box-shadow: none;
  }
  
  /* 高亮文本 */
  mark {
    background-color: rgba(255, 215, 0, 0.25);
    color: var(--text-color);
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  [data-theme="dark"] mark {
    background-color: rgba(255, 215, 0, 0.2);
  }
  
  .search-result-item:hover mark {
    background-color: rgba(255, 215, 0, 0.35);
  }
  
  /* 动画效果 */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .search-result-item {
    animation: fadeIn 0.3s ease-out forwards;
  }
  
  .search-result-item:nth-child(1) { animation-delay: 0.05s; }
  .search-result-item:nth-child(2) { animation-delay: 0.1s; }
  .search-result-item:nth-child(3) { animation-delay: 0.15s; }
  .search-result-item:nth-child(4) { animation-delay: 0.2s; }
  .search-result-item:nth-child(5) { animation-delay: 0.25s; }
  .search-result-item:nth-child(6) { animation-delay: 0.3s; }
  .search-result-item:nth-child(7) { animation-delay: 0.35s; }
  .search-result-item:nth-child(8) { animation-delay: 0.4s; }
  .search-result-item:nth-child(n+9) { animation-delay: 0.45s; }
  
  /* 响应式设计 */
  @media (max-width: 768px) {
    .search-container {
      width: 180px;
    }
    
    .search-input:focus {
      width: 280px;
    }
    
    .search-result-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
  }
  
  @media (max-width: 480px) {
    .search-container {
      width: 150px;
    }
    
    .search-input {
      font-size: 0.85rem;
      padding: 0.45rem 0.8rem 0.45rem 2.25rem;
    }
    
    .search-input:focus {
      width: 220px;
    }
    
    .search-result-item {
      padding: 0.875rem 1rem;
    }
    
    .search-result-title {
      font-size: 0.9rem;
    }
    
    .search-result-excerpt {
      font-size: 0.8rem;
    }
    
    .search-result-meta {
      font-size: 0.7rem;
    }
  }
  
  /* 居中弹窗样式 */
  .search-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2000;
    display: none;
    align-items: center;
    justify-content: center;
    overflow-y: auto;
  }
  
  .search-modal.show {
    display: flex;
  }
  
  /* 遮罩层 */
  .search-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(4px);
    opacity: 0;
    transition: opacity 0.3s ease;
    cursor: pointer;
  }
  
  .search-modal.show .search-modal-overlay {
    opacity: 1;
  }
  
  /* 弹窗内容 */
  .search-modal-content {
    position: relative;
    background-color: var(--bg-color);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2), 0 5px 20px rgba(0, 0, 0, 0.15);
    width: 90%;
    max-width: 600px;
    max-height: 80vh;
    display: flex;
    flex-direction: column;
    opacity: 0;
    transform: translateY(-20px) scale(0.95);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 2001;
    margin: 2rem;
  }
  
  .search-modal.show .search-modal-content {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  
  /* 弹窗头部 */
  .search-modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 2rem;
    border-bottom: 1px solid var(--border-color);
    background-color: var(--bg-color);
    border-radius: 16px 16px 0 0;
  }
  
  .search-modal-header h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-color);
    font-family: var(--font-sans);
  }
  
  /* 关闭按钮 */
  .search-modal-close {
    background: none;
    border: none;
    color: var(--text-color);
    opacity: 0.6;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 8px;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
  }
  
  .search-modal-close:hover {
    opacity: 1;
    background-color: rgba(0, 0, 0, 0.05);
  }
  
  [data-theme="dark"] .search-modal-close:hover {
    background-color: rgba(255, 255, 255, 0.08);
  }
  
  /* 弹窗主体 */
  .search-modal-body {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
    background-color: var(--bg-color);
    border-radius: 0 0 16px 16px;
  }
  
  /* 弹窗内搜索结果 */
  .search-modal-results {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  
  .search-modal-results .search-result-item {
    border-radius: 0;
  }
  
  .search-modal-results .search-result-item:first-child {
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
  }
  
  .search-modal-results .search-result-item:last-child {
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
  }
  
  /* 响应式弹窗 */
  @media (max-width: 768px) {
    .search-modal-content {
      margin: 1rem;
      max-width: calc(100vw - 2rem);
      max-height: calc(100vh - 2rem);
    }
    
    .search-modal-header {
      padding: 1.25rem 1.5rem;
    }
    
    .search-modal-header h2 {
      font-size: 1.125rem;
    }
    
    .search-modal-body {
      padding: 0.75rem;
    }
  }
  
  @media (max-width: 480px) {
    .search-modal-content {
      margin: 0.5rem;
      max-width: calc(100vw - 1rem);
      max-height: calc(100vh - 1rem);
      border-radius: 12px;
    }
    
    .search-modal-header {
      padding: 1rem 1.25rem;
    }
    
    .search-modal-header h2 {
      font-size: 1rem;
    }
    
    .search-modal-body {
      padding: 0.5rem;
    }
  }
</style>
