---
import ThemeToggle from '../components/ThemeToggle.astro';
import LoadingIndicator from '../components/LoadingIndicator.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --bg-color: #ffffff;
        --text-color: #1a1a1a;
        --accent-color: #000000;
        --border-color: #e5e5e5;
        --code-bg-color: #f8f9fa;
        --code-text-color: #212529;
        --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        --font-serif: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, serif;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --bg-color: #1a1a1a;
          --text-color: #e0e0e0;
          --accent-color: #ffffff;
          --border-color: #333333;
          --code-bg-color: #2d2d2d;
          --code-text-color: #e0e0e0;
        }
      }

      [data-theme="dark"] {
        --bg-color: #1a1a1a;
        --text-color: #e0e0e0;
        --accent-color: #ffffff;
        --border-color: #333333;
        --code-bg-color: #2d2d2d;
        --code-text-color: #e0e0e0;
      }

      [data-theme="light"] {
        --bg-color: #ffffff;
        --text-color: #1a1a1a;
        --accent-color: #000000;
        --border-color: #e5e5e5;
        --code-bg-color: #f8f9fa;
        --code-text-color: #212529;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: var(--font-serif);
        background-color: var(--bg-color);
        color: var(--text-color);
        line-height: 1.75;
        transition: background-color 0.3s ease, color 0.3s ease;
        font-size: 16px;
      }

      a {
        color: var(--accent-color);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
      }

      header {
        padding: 2rem 0;
        border-bottom: 1px solid var(--border-color);
      }

      .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
      }

      .nav-links {
        display: flex;
        gap: 2rem;
        margin: 0 auto;
      }

      .nav-link {
        color: var(--text-color);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
        position: relative;
      }

      .nav-link::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 1px;
        background-color: var(--accent-color);
        transition: width 0.3s ease;
      }

      .nav-link:hover {
        color: var(--accent-color);
      }

      .nav-link:hover::after {
        width: 100%;
      }

      .site-title {
        font-size: 1.5rem;
        font-weight: 700;
      }

      main {
        padding: 2rem 0;
        min-height: calc(100vh - 200px);
        opacity: 0;
        transform: translateY(20px);
      }

      /* 动画样式 */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes slideIn {
        from {
          opacity: 0;
          transform: translateX(-10px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      /* 为文章内容添加动画 */
      article {
        animation: fadeInUp 0.8s ease-out;
      }

      /* 为链接添加过渡效果 */
      a {
        color: var(--accent-color);
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
      }

      a::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 1px;
        background-color: var(--accent-color);
        transition: width 0.3s ease;
      }

      a:hover {
        text-decoration: none;
      }

      a:hover::after {
        width: 100%;
      }

      /* 为文章列表项添加动画 */
      .post-item {
        padding: 1.5rem 0;
        border-bottom: 1px solid var(--border-color);
        animation: slideIn 0.5s ease-out;
        animation-fill-mode: both;
      }

      /* 为列表项添加交错动画 */
      .post-item:nth-child(1) { animation-delay: 0.1s; }
      .post-item:nth-child(2) { animation-delay: 0.2s; }
      .post-item:nth-child(3) { animation-delay: 0.3s; }
      .post-item:nth-child(4) { animation-delay: 0.4s; }
      .post-item:nth-child(5) { animation-delay: 0.5s; }
      .post-item:nth-child(n+6) { animation-delay: 0.6s; }

      footer {
        padding: 2rem 0;
        border-top: 1px solid var(--border-color);
        text-align: center;
        font-size: 0.9rem;
        color: var(--text-color);
        opacity: 0.7;
      }

      .theme-toggle {
        background: none;
        border: 1px solid var(--border-color);
        padding: 0.5rem;
        border-radius: 4px;
        cursor: pointer;
        color: var(--text-color);
        font-size: 1rem;
        transition: background-color 0.3s ease;
      }

      .theme-toggle:hover {
        background-color: var(--hover-color);
      }

      /* 文章样式 */
      article {
        margin-bottom: 2rem;
      }

      article h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
      }

      article h2 {
        font-size: 1.5rem;
        margin: 1.5rem 0 1rem;
      }

      article h3 {
        font-size: 1.25rem;
        margin: 1.5rem 0 1rem;
      }

      article p {
        margin-bottom: 1rem;
      }

      article ul, article ol {
        margin-left: 1.5rem;
        margin-bottom: 1rem;
      }

      article li {
        margin-bottom: 0.5rem;
      }

      article code {
        font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
        background-color: var(--code-bg-color);
        color: var(--code-text-color);
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-size: 0.9rem;
      }

      article pre {
        background-color: var(--code-bg-color);
        color: var(--code-text-color);
        padding: 1rem;
        border-radius: 6px;
        overflow-x: auto;
        margin-bottom: 1rem;
      }

      article pre code {
        background: none;
        padding: 0;
      }

      /* 文章列表样式 */
      .post-list {
        list-style: none;
      }

      .post-item {
        padding: 1.5rem 0;
        border-bottom: 1px solid var(--border-color);
      }

      .post-item:last-child {
        border-bottom: none;
      }

      .post-item h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
      }

      .post-meta {
        font-size: 0.9rem;
        opacity: 0.7;
        margin-bottom: 0.5rem;
      }

      .post-excerpt {
        margin-bottom: 1rem;
      }

      /* 响应式设计 */
      @media (max-width: 600px) {
        .nav-container {
          flex-direction: column;
          align-items: flex-start;
          gap: 1rem;
        }

        .nav-links {
          width: 100%;
          gap: 1rem;
          margin: 0;
        }

        article h1 {
          font-size: 1.75rem;
        }

        .site-title {
          font-size: 1.25rem;
        }
      }
    </style>
  </head>
  <body>
    <!-- 加载指示器 -->
    <LoadingIndicator />
    
    <div class="container">
      <header>
        <nav class="nav-container">
          <h1 class="site-title"><a href="/">WON's Blog</a></h1>
          <div class="nav-links">
            <a href="/" class="nav-link">首页</a>
            <a href="/archive" class="nav-link">归档</a>
            <a href="/sponsors" class="nav-link">赞助</a>
          </div>
          <ThemeToggle />
        </nav>
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <p>© {new Date().getFullYear()} WON's Blog. All rights reserved.</p>
      </footer>
    </div>

    <!-- 客户端导航优化脚本 -->
    <script>
      // 隐藏加载指示器
      const hideLoadingIndicator = () => {
        const loadingOverlay = document.querySelector('.loading-overlay');
        if (loadingOverlay) {
          loadingOverlay.style.opacity = '0';
          setTimeout(() => {
            loadingOverlay.style.display = 'none';
          }, 300);
        }
      };

      // 显示加载指示器
      const showLoadingIndicator = () => {
        const loadingOverlay = document.querySelector('.loading-overlay');
        if (loadingOverlay) {
          loadingOverlay.style.display = 'flex';
          setTimeout(() => {
            loadingOverlay.style.opacity = '0.8';
          }, 10);
        }
      };

      // 初始化：页面加载完成后隐藏加载指示器
      window.addEventListener('load', () => {
        hideLoadingIndicator();
      });

      // 页面切换时显示加载指示器
      window.addEventListener('beforeunload', () => {
        showLoadingIndicator();
      });

      // 拦截同域链接点击，实现平滑导航
      document.addEventListener('click', (e) => {
        const target = e.target.closest('a');
        if (
          target && 
          target.tagName === 'A' && 
          target.origin === window.location.origin &&
          !target.getAttribute('target') &&
          !e.ctrlKey &&
          !e.metaKey &&
          !e.shiftKey
        ) {
          e.preventDefault();
          
          // 显示加载指示器
          showLoadingIndicator();
          
          // 延迟导航，让加载指示器有足够时间显示
          setTimeout(() => {
            window.location.href = target.href;
          }, 100);
        }
      });

      // 资源预加载：预加载导航链接的资源
      const preloadLinks = () => {
        const links = document.querySelectorAll('a.nav-link');
        links.forEach(link => {
          const preloadLink = document.createElement('link');
          preloadLink.rel = 'prefetch';
          preloadLink.href = link.href;
          document.head.appendChild(preloadLink);
        });
      };

      // 页面空闲时预加载资源
      if ('requestIdleCallback' in window) {
        requestIdleCallback(preloadLinks);
      } else {
        setTimeout(preloadLinks, 1000);
      }

      // 添加页面进入动画
      document.addEventListener('DOMContentLoaded', () => {
        const mainContent = document.querySelector('main');
        if (mainContent) {
          mainContent.style.opacity = '0';
          mainContent.style.transform = 'translateY(20px)';
          
          // 使用requestAnimationFrame确保动画流畅
          requestAnimationFrame(() => {
            mainContent.style.transition = 'opacity 0.6s ease-out, transform 0.6s ease-out';
            mainContent.style.opacity = '1';
            mainContent.style.transform = 'translateY(0)';
          });
        }
      });
    </script>
  </body>
</html>
