---
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --bg-color: #ffffff;
        --text-color: #1a1a1a;
        --accent-color: #000000;
        --border-color: #e5e5e5;
        --code-bg-color: #f8f9fa;
        --code-text-color: #212529;
        --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        --font-serif: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, serif;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --bg-color: #1a1a1a;
          --text-color: #e0e0e0;
          --accent-color: #ffffff;
          --border-color: #333333;
          --code-bg-color: #2d2d2d;
          --code-text-color: #e0e0e0;
        }
      }

      [data-theme="dark"] {
        --bg-color: #1a1a1a;
        --text-color: #e0e0e0;
        --accent-color: #ffffff;
        --border-color: #333333;
        --code-bg-color: #2d2d2d;
        --code-text-color: #e0e0e0;
      }

      [data-theme="light"] {
        --bg-color: #ffffff;
        --text-color: #1a1a1a;
        --accent-color: #000000;
        --border-color: #e5e5e5;
        --code-bg-color: #f8f9fa;
        --code-text-color: #212529;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: var(--font-serif);
        background-color: var(--bg-color);
        color: var(--text-color);
        line-height: 1.75;
        transition: background-color 0.3s ease, color 0.3s ease;
        font-size: 16px;
      }

      a {
        color: var(--accent-color);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
      }

      header {
        padding: 2rem 0;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .site-title {
        font-size: 1.5rem;
        font-weight: 700;
      }

      main {
        padding: 2rem 0;
        min-height: calc(100vh - 200px);
      }

      footer {
        padding: 2rem 0;
        border-top: 1px solid var(--border-color);
        text-align: center;
        font-size: 0.9rem;
        color: var(--text-color);
        opacity: 0.7;
      }

      .theme-toggle {
        background: none;
        border: 1px solid var(--border-color);
        padding: 0.5rem;
        border-radius: 4px;
        cursor: pointer;
        color: var(--text-color);
        font-size: 1rem;
        transition: background-color 0.3s ease;
      }

      .theme-toggle:hover {
        background-color: var(--hover-color);
      }

      /* 文章样式 */
      article {
        margin-bottom: 2rem;
      }

      article h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
      }

      article h2 {
        font-size: 1.5rem;
        margin: 1.5rem 0 1rem;
      }

      article h3 {
        font-size: 1.25rem;
        margin: 1.5rem 0 1rem;
      }

      article p {
        margin-bottom: 1rem;
      }

      article ul, article ol {
        margin-left: 1.5rem;
        margin-bottom: 1rem;
      }

      article li {
        margin-bottom: 0.5rem;
      }

      article code {
        font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
        background-color: var(--code-bg-color);
        color: var(--code-text-color);
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-size: 0.9rem;
      }

      article pre {
        background-color: var(--code-bg-color);
        color: var(--code-text-color);
        padding: 1rem;
        border-radius: 6px;
        overflow-x: auto;
        margin-bottom: 1rem;
      }

      article pre code {
        background: none;
        padding: 0;
      }

      /* 文章列表样式 */
      .post-list {
        list-style: none;
      }

      .post-item {
        padding: 1.5rem 0;
        border-bottom: 1px solid var(--border-color);
      }

      .post-item:last-child {
        border-bottom: none;
      }

      .post-item h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
      }

      .post-meta {
        font-size: 0.9rem;
        opacity: 0.7;
        margin-bottom: 0.5rem;
      }

      .post-excerpt {
        margin-bottom: 1rem;
      }

      /* 响应式设计 */
      @media (max-width: 600px) {
        header {
          flex-direction: column;
          align-items: flex-start;
          gap: 1rem;
        }

        article h1 {
          font-size: 1.75rem;
        }

        .site-title {
          font-size: 1.25rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <h1 class="site-title"><a href="/">WON's Blog</a></h1>
        <ThemeToggle />
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <p>© {new Date().getFullYear()} WON's Blog. All rights reserved.</p>
      </footer>
    </div>
  </body>
</html>
